    "react-router": "4.2.0",
    "react-router-dom": "4.2.0",
    "react-router-redux": "5.0.0-alpha.9",
    "redux": "^3.7.2",
    "redux-actions": "^2.3.2",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0"
